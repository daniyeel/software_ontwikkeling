        <itemizedlist>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga26474f43799fbade9cf300e21dd3a91a"/>#define <emphasis role="strong">SET_BIT</emphasis>(REG,  BIT)&#160;&#160;&#160;((REG) |= (BIT))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga133aae6fc0d41bffab39ab223a7001de"/>#define <emphasis role="strong">CLEAR_BIT</emphasis>(REG,  BIT)&#160;&#160;&#160;((REG) &amp;= ~(BIT))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga822bb1bb9710d5f2fa6396b84e583c33"/>#define <emphasis role="strong">READ_BIT</emphasis>(REG,  BIT)&#160;&#160;&#160;((REG) &amp; (BIT))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga1378fbdda39f40b85420df55f41460ef"/>#define <emphasis role="strong">CLEAR_REG</emphasis>(REG)&#160;&#160;&#160;((REG) = (0x0))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga32f78bffcaf6d13023dcd7f05e0c4d57"/>#define <emphasis role="strong">WRITE_REG</emphasis>(REG,  VAL)&#160;&#160;&#160;((REG) = (VAL))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1gae7f188a4d26c9e713a48414783421071"/>#define <emphasis role="strong">READ_REG</emphasis>(REG)&#160;&#160;&#160;((REG))</para>
</listitem>
            <listitem><para><anchor xml:id="_group___exported__macro_1ga6553c99f510c3bab8cc0a91602053247"/>#define <emphasis role="strong">MODIFY_REG</emphasis>(REG,  CLEARMASK,  SETMASK)&#160;&#160;&#160;WRITE_REG((REG), (((READ_REG(REG)) &amp; (~(CLEARMASK))) | (SETMASK)))</para>
</listitem>
